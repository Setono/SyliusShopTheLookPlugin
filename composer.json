{
    "name": "setono/sylius-shop-the-look-plugin",
    "type": "sylius-plugin",
    "keywords": ["sylius", "sylius-plugin"],
    "description": "Create looks for your Sylius store that let your customers buy more items",
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "sylius/sylius": "^1.3"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.2",
        "korbeil/phpstan-generic-rules": "^0.2.4",
        "matthiasnoback/symfony-config-test": "^4.1",
        "matthiasnoback/symfony-dependency-injection-test": "^4.1",
        "phpspec/phpspec": "^6.0",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.0",
        "phpstan/phpstan-doctrine": "^0.12.0",
        "phpstan/phpstan-strict-rules": "^0.12.2",
        "phpstan/phpstan-webmozart-assert": "^0.12.0",
        "phpunit/phpunit": "^8.5",
        "sensiolabs/security-checker": "^6.0",
        "sylius-labs/coding-standard": "^3.1",
        "symfony/browser-kit": "^4.4 || ^5.0",
        "symfony/debug-bundle": "^4.4 || ^5.0",
        "symfony/dotenv": "^4.4 || ^5.0",
        "symfony/intl": "^4.4 || ^5.0",
        "symfony/web-profiler-bundle": "^4.4 || ^5.0",
        "symfony/web-server-bundle": "^4.4 || ^5.0",
        "thecodingmachine/phpstan-safe-rule": "^1.0",
        "vimeo/psalm": "^3.9"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Setono\\SyliusShopTheLookPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": ["tests/Application/Kernel.php"],
        "psr-4": {
            "Tests\\Setono\\SyliusShopTheLookPlugin\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "analyse": [
            "vendor/bin/phpstan analyse -c phpstan.neon -l max src",
            "vendor/bin/psalm"
        ],
        "check-style": "vendor/bin/ecs check src/ tests/",
        "fix-style": "vendor/bin/ecs check src/ tests/ --fix",
        "phpspec": "vendor/bin/phpspec run -vvv",
        "phpunit": "vendor/bin/phpunit",
        "tests": [
            "@phpspec",
            "@phpunit"
        ]
    }
}
