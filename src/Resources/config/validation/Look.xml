<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">
    <class name="Setono\SyliusShopTheLookPlugin\Model\Look">

        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">code</option>
            <option name="message">setono_sylius_shop_the_look.look.code.unique</option>
            <option name="groups">setono_sylius_shop_the_look</option>
        </constraint>

        <property name="code">
            <constraint name="NotBlank">
                <option name="message">setono_sylius_shop_the_look.look.code.not_blank</option>
                <option name="groups">setono_sylius_shop_the_look</option>
            </constraint>
            <constraint name="Regex">
                <option name="message">setono_sylius_shop_the_look.look.code.regex</option>
                <option name="pattern">/^[\w-]*$/</option>
                <option name="groups">setono_sylius_shop_the_look</option>
            </constraint>
        </property>

        <property name="percentageDiscount">
            <constraint name="NotBlank">
                <option name="message">setono_sylius_shop_the_look.look.percentage_discount.not_blank</option>
                <option name="groups">setono_sylius_shop_the_look</option>
            </constraint>
            <constraint name="Type">
                <option name="type">numeric</option>
                <option name="message">setono_sylius_shop_the_look.look.percentage_discount.numeric</option>
                <option name="groups">setono_sylius_shop_the_look</option>
            </constraint>
            <constraint name="Range">
                <option name="min">0</option>
                <option name="max">1</option>
                <option name="notInRangeMessage">setono_sylius_shop_the_look.look.percentage_discount.range</option>
                <option name="groups">setono_sylius_shop_the_look</option>
            </constraint>
        </property>

        <property name="translations">
            <constraint name="Valid" />
        </property>

        <property name="parts">
            <constraint name="Valid" />
        </property>

        <property name="images">
            <constraint name="Valid" />
        </property>

    </class>
</constraint-mapping>
