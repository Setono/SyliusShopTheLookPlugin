<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">
    <class name="Setono\SyliusShopTheLookPlugin\Model\LookImage">

        <property name="file">
            <constraint name="Image">
                <option name="maxSize">10M</option>
                <option name="maxSizeMessage">setono_sylius_shop_the_look.look_image.file.max_size</option>
                <option name="uploadIniSizeErrorMessage">setono_sylius_shop_the_look.look_image.file.upload_ini_size</option>
                <option name="groups">setono_sylius_shop_the_look</option>
            </constraint>
        </property>

    </class>
</constraint-mapping>
