{%- macro calculateLookPrice(look) -%}
    {% from "@SyliusShop/Common/Macro/money.html.twig" import convertAndFormat %}

    {{- convertAndFormat(look|setono_look_calculate_price({'channel': sylius.channel})) }}
{%- endmacro -%}

{%- macro calculateLookDiscount(look) -%}
    {% from "@SyliusShop/Common/Macro/money.html.twig" import convertAndFormat %}

    {{- convertAndFormat(look|setono_look_calculate_discount({'channel': sylius.channel})) }}
{%- endmacro -%}

{%- macro calculateLookTotal(look) -%}
    {% from "@SyliusShop/Common/Macro/money.html.twig" import convertAndFormat %}

    {{- convertAndFormat(look|setono_look_calculate_total({'channel': sylius.channel})) }}
{%- endmacro -%}

{%- macro convert(amount) -%}
    {{- amount|sylius_convert_money(sylius.channel.baseCurrency.code, sylius.currencyCode) -}}
{%- endmacro -%}

{%- macro calculatePriceAmount(variant) -%}
    {% from _self import convert %}

    {{- convert(variant|sylius_calculate_price({'channel': sylius.channel})) -}}
{%- endmacro -%}

{%- macro calculateDiscountAmount(variant, look) -%}
    {% from _self import convert %}

    {{- convert(variant|sylius_calculate_price({'channel': sylius.channel}) * look.discount) -}}
{%- endmacro -%}
