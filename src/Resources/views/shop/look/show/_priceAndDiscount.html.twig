{% import "@SetonoSyliusShopTheLookPlugin/common/macro/money.html.twig" as money %}

<div class="setono-look-price-box" {{ sylius_test_html_attribute('look-price-box') }}>
    {# @var \Setono\SyliusShopTheLookPlugin\Model\LookInterface look #}
    {% if look.discount > 0 %}
        <div>
            Save
            {{ look.displayableDiscount }}%
            (
                <span class="setono-look-discount">{{ money.calculateLookDiscount(look) }}</span>
                OFF
            )
        </div>
        <strike class="setono-look-total">{{ money.calculateLookTotal(look) }}</strike>
    {% endif %}

    <span class="setono-look-price">
        {{ money.calculateLookPrice(look) }}
    </span>
</div>
