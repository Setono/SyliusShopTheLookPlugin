{# @var \Setono\SyliusShopTheLookPlugin\Model\LookInterface[] looks #}

{% if looks|length > 0 %}
<div class="carousel-wrapper">
    <div class="carousel">
        {% for look in looks %}
            <div class="carousel-item">
                {% include '@SetonoSyliusShopTheLookPlugin/shop/look/_box.html.twig' %}
            </div>
        {% endfor %}
    </div>

    <div class="carousel-nav">
        <button class="carousel-left ui huge black icon button">
            <i class="left arrow icon"></i>
        </button>
        <button class="carousel-right ui huge black icon button">
            <i class="right arrow icon"></i>
        </button>
    </div>
</div>
{% endif %}
